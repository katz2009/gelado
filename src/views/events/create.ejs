<!DOCTYPE html>
<html lang="pt-BR">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>Criar Evento</title>
  <link rel="stylesheet" href="/styles.css" />
</head>
<body>
  <header>
    <h1>Meu Sistema de Eventos</h1>
    <nav>
      <a href="/hub">Hub</a> |
      <a href="/register">Cadastrar Usuário</a> |
      <a href="/events/create">Criar Evento</a>
    </nav>
    <hr />
  </header>

  <main>
    <h2>Criar Novo Evento</h2>
    <form id="eventForm">
      <label for="title">Título:</label>
      <input type="text" id="title" required />
      <br />
      <label for="date">Data:</label>
      <input type="date" id="date" required />
      <br />
      <label for="created_by">ID do Criador:</label>
      <input type="number" id="created_by" required />
      <br />
      <button type="submit">Salvar Evento</button>
      <span id="evMsg"></span>
    </form>
  </main>

  <footer>
    <hr />
    <p style="text-align:center">© <%= new Date().getFullYear() %> Meu Sistema</p>
  </footer>

  <script>
    document.getElementById('eventForm').addEventListener('submit', async e => {
      e.preventDefault();
      const title = document.getElementById('title').value;
      const date = document.getElementById('date').value;
      const created_by = document.getElementById('created_by').value;
      const msg = document.getElementById('evMsg');

      try {
        const res = await fetch('/api/events', {
          method: 'POST',
          headers: { 'Content-Type': 'application/json' },
          body: JSON.stringify({ title, date, created_by })
        });

        if (res.ok) {
          msg.textContent = 'Evento criado!';
          msg.style.color = 'green';
          e.target.reset();
        } else {
          const data = await res.json();
          msg.textContent = data.error || 'Erro ao criar evento';
          msg.style.color = 'red';
        }
      } catch (err) {
        msg.textContent = err.message;
        msg.style.color = 'red';
      }
    });
  </script>
</body>
</html>